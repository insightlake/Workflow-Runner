#!/usr/bin/env bash

echo "Starting InsightLake ..."

export JAVA_HOME=/usr/java/default
export GOOGLE_APPLICATION_CREDENTIALS=/home/vijay/dev_key.json


if [ "$JAVA_HOME" != "" ]; then
    #echo "run java in $JAVA_HOME"
    JAVA_HOME=$JAVA_HOME
fi

if [ "$JAVA_HOME" = "" ]; then
    echo "Error: JAVA_HOME is not set."
    exit 1
fi

JAVA=$JAVA_HOME/bin/java
JAVA_HEAP_MAX=-Xmx1000m

PRG="${0}"

while [ -h "${PRG}" ]; do
  ls=`ls -ld "${PRG}"`
  link=`expr "$ls" : '.*-> \(.*\)$'`
  if expr "$link" : '/.*' > /dev/null; then
    PRG="$link"
  else
    PRG=`dirname "${PRG}"`/"$link"
  fi
done

EDP_HOME=`dirname ${PRG}`
EDP_HOME=`cd ${EDP_HOME}/..;pwd`

mkdir -p $EDP_HOME/logs
cd $EDP_HOME/logs


echo "$EDP_HOME"

CLASSPATH="$EDP_HOME/conf:$EDP_HOME/libs:$EDP_HOME/bin:$EDP_HOME/dist"

for f in $EDP_HOME/libs/*.jar; do
    CLASSPATH=${CLASSPATH}:$f;
done

echo "Starting Workflow Runner ..."
java -jar -Dthin.root=$EDP_HOME/libs/thin/root $EDP_HOME/libs/thin/root/edp-workflow-runner-2.0.1.RELEASE.jar com.insightlake.edp.workflow.runner.Application  --spring.config.name=mysql --spring.config.location=file:///$EDP_HOME/conf/mysql.properties --workflows /home/vijay/wfs1.txt --basedir /home/vijay --env /home/vijay/environment.yaml -c /home/vijay/cluster_config.yaml